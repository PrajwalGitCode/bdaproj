<%- include ('../partials/header') %>
	<section class="camp">
		<div class="container">
			<div class="row">

				<h1 style="text-align: center">edit comment</h1>
				<div style="width:30%;margin :25px auto;">
					<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"
						method="POST">
						<div class="form-group">
							<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-default btn-block">submit</button>
						</div>
					</form>
					<a href="/campgrounds">go back</a>
				</div>


			</div>
		</div>
	</section>

	<%- include ('../partials/footer') %>


		<style>
			.camp {
				background-color: #CFE9EF;
				margin-top: -20px;
				padding-top: 30px;
				height: 50vh;
			}
		</style>